{
    "version": "2.0.0",

    "windows": {
        "command": "powershell.exe",
        "args": [ "-NoProfile", "-ExecutionPolicy", "Bypass", "-Command", "Invoke-Build" ]
    },
    "linux": {
        "command": "/usr/bin/powershell",
        "args": [ "-NoProfile",  "-Command", "Invoke-Build" ]
    },
    "osx": {
        "command": "/usr/local/bin/powershell",
        "args": [ "-NoProfile", "-Command", "Invoke-Build" ]
    },

    "echoCommand": true,

    "tasks": [
        {
            "taskName": "Restore"
        },
        {
            "taskName": "CleanAll"
        },
        {
            "taskName": "Clean",
            "group": "clean"
        },
        {
            "taskName": "BuildAll"
        },
        {
            "taskName": "Build",
            "group": "build"
        }
    ]
}
